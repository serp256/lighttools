<?xml version="1.0"?>
<s:GridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx">

	<fx:Script><![CDATA[
		import ru.redspell.rasterizer.views.ClassesDataGrid;
		import ru.redspell.rasterizer.utils.ClassesGridItemData;

		protected function chckbox_changeHandler(event:Event):void {
			(data as ClassesGridItemData).export = chckbox.selected;
			(grid.dataGrid as ClassesDataGrid).itemChecked();
		}
		]]></fx:Script>

	<s:HGroup verticalAlign="middle" horizontalAlign="center" width="100%" height="100%">
		<s:CheckBox id="chckbox" change="chckbox_changeHandler(event)" selected="{data.export}"/>
	</s:HGroup>
</s:GridItemRenderer>